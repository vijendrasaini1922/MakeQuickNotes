<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/add_edit_note_theme"
    tools:context=".AddEditNoteActivity">

    <EditText
        android:id="@+id/editNoteTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:hint="Enter Note Title"
        android:minHeight="48dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/light_white" />

    <EditText
        android:id="@+id/editNoteDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sign"
        android:layout_below="@+id/editNoteTitle"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="start"
        android:hint="Enter Note Description"
        android:inputType="textMultiLine"
        android:textColor="@color/black"
        android:textColorHint="@color/light_white" />

    <TextView
        android:id="@+id/sign"
        android:key="signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/addButton"
        android:layout_marginEnd="30dp"
        android:layout_alignParentRight="true"
        android:text="No Signatures"
        android:textStyle="italic"
        android:textFontWeight="400"
        android:textSize="12sp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addButton"
        android:layout_alignParentBottom="true"
        android:text="Add Content"
        android:backgroundTint="@color/purple_500"
        android:layout_margin="20dp"
        android:padding="5dp"/>



</RelativeLayout>
</layout>